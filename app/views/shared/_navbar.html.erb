<header class='header'>
    <nav class='navbar'>
        <% if user_signed_in? %>
            <li> Welcome <span><%= current_user.name.capitalize %>!</span></li>
            <li> <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: 'sign-out-button' %></li>
        <% else %>
            <div class='services' >
                <li> <%= link_to "Login", new_user_session_path %></li>
                |
                <li> <%= link_to "Register", new_user_registration_path %></li>
            </div>
        <% end %>
    </nav>
</header>